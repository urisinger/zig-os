{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Kernel",
            "type": "shell",
            "command": "make kernel",
            "group": "build"
        },
        {
            "label": "Start QEMU Debug",
            "type": "shell",
            "command": "make",
            "args": ["debug-x86_64"],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*QEMU.*$",
                    "endsPattern": "^.*QEMU.*$"
                }
            },
            "dependsOn": ["Build Kernel"]
        }
    ]
} 